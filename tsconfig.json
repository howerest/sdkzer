{
  "version": "5.0.3",
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "types" : ["node", "es6-promise"],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src/**/*.ts",
    "node_modules/@types/**/*.ts"
  ],
  "exclude": []
}
