{
  "version": "2.1.4",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "built/",
    "sourceMap": false,
    "moduleResolution": "node"
  },
  "compileOnSave": true,
  "filesGlob": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "typings",
    "node_modules"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
