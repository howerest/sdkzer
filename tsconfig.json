{
  "version": "2.1.4",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "types" : ["node", "es6-promise"]
  },
  "compileOnSave": true,
  "include": [
    "src/*.ts"
  ],
  "exclude": ["node_modules"]
}
