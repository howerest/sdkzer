{
  "version": "3.1.3",
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "moduleResolution": "node",
    "types" : ["node", "es6-promise"]
  },
  "compileOnSave": true,
  "include": [
    "src/*.ts",
    "node_modules/@types/**/*.ts"
  ],
  "exclude": []
}
